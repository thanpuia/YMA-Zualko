<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:orientation="vertical">



            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:lines="1"
                android:singleLine="true"
                android:layout_marginBottom="5dp"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelAlwaysShown="true"
                app:met_floatingLabelText="Mitthi Hming"
                android:maxLength="50"
                android:paddingLeft="15dp"
                />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLines="1"
                android:lines="1"
                android:singleLine="true"
                android:layout_marginBottom="5dp"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelAlwaysShown="true"
                app:met_floatingLabelText="Kum"
                android:maxLength="3"
                android:hint="Entirnan: K-97"
                android:paddingLeft="15dp"

                />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/family"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelAlwaysShown="true"
                app:met_floatingLabelText="A chhungte"
                android:hint="Entirnan: A Nupui: Hmingi"
                android:lines="1"
                android:singleLine="true"
                android:layout_marginBottom="5dp"
                android:paddingLeft="15dp"

                />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:lines="1"
                android:singleLine="true"
                android:layout_marginBottom="5dp"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelAlwaysShown="true"
                app:met_floatingLabelText="Veng"
                android:hint="Entirnan: Section V, Electric Veng, Aizawl"
                android:maxLength="50"
                android:paddingLeft="15dp"

                />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/branch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:lines="1"
                android:singleLine="true"
                android:layout_marginBottom="5dp"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelAlwaysShown="true"
                app:met_floatingLabelText="Branch"
                android:hint="Entirnan: Electric Veng Branch"
                android:maxLength="50"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/deathTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thih ni leh dar"
                        android:onClick="deathTimeClick"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/deathTimeValue"
                        android:textAlignment="center"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <Button
                        android:id="@+id/funeralTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vui ni leh dar"
                        android:onClick="funeralClick"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:id="@+id/funeralTimeValue" />
                </LinearLayout>

            </LinearLayout>



            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ok"
                android:onClick="nextClick"
                android:layout_gravity="center"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>